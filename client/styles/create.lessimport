.editable {
  outline: 1px dashed #e0e1e2;
  cursor: text;
}

input[type=file] {
  height: 40px;
  width: 165px;

  &::-webkit-file-upload-button {
    display:none;
  }
  &::before {
    display: inline-block;
    background: @dark-color;
    color: @light-color;
    outline: none;
    white-space: nowrap;
    -webkit-user-select: none;
    cursor: pointer;
    padding: 5px;
    text-align: center;
    font-size: 14px;
    width: 100%;
    line-height: 30px;

  }
  &:hover::before {
    background-color: @action-color;
    color: @dark-color;
  }

  &.change-header-upload{
    &::before {
      content: 'Change Header Image';
    }
  }

  &.do-header-upload{
    &::before {
      content: 'Upload Header Image';
    }
  }

  &.image-upload{
    &::before {
      content: 'Upload Image';
    }
  }

  &.overlay{
    position: absolute;
    width: 150px;
    height: 150px;
    z-index: 10;
    background-color: @black-color;
    opacity: 0.7;

    &::-webkit-file-upload-button {
      display:none;
    }
    &::before {
      display: inline-block;
      color: @light-color;
      outline: none;
      -webkit-user-select: none;
      cursor: pointer;
      padding: 85px 15px;
      text-align: center;
      font-size: 14px;
      width: 100%;;
      content: 'Upload Image';
    }
    &:hover::before {
      background-color: @dark-color;
      color: @light-color;
    }
  }
}

