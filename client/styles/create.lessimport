  @searchFormHeight: 75px;   
  @innerElementPadding: 9px;   
     
  div.search-outside-input-container {

    @searchTriggerWidth: 90px;
    @searchButtonWidth: 66px;
    @searchInputHeight: 35px; 
    @searchInputWidth: calc(100% ~"-" @searchTriggerWidth ~"-" @innerElementPadding);

    position: relative;
    width: 0%;
    overflow: hidden;
    min-width: calc(@searchTriggerWidth+@innerElementPadding);
    height: @searchInputHeight; 

    .transition(width 0.3s);

    -webkit-backface-visibility: hidden;        

    .search-trigger, .search-input-container, input, .search-button {
      font-size: 12px;
      height: @searchInputHeight;
      color: @light-color;
      position: absolute;
      float: left;
    }

    .search-trigger {
      z-index: 10;
      text-align: center;
      line-height: @searchInputHeight;
      width: @searchTriggerWidth;
      background: @black-color;
    }

    .search-input-container {
      background: @dark-color;
      width: calc(100% ~"-" @searchButtonWidth);
      padding-left: 10px;
    }

    input {     
      background: @dark-color;
      width: @searchInputWidth;
      left: @searchTriggerWidth+10px;
      display: none;
    }

    .search-button {
      background: @dark-color;
      left: calc(100% ~"-" @searchButtonWidth);
      padding: 7.5px 13px 7.5px 40px;
    }

  }

  .search-radios{
    position: relative;
    margin-top: 20px;
    margin-bottom: 40px;

    display: flex; // this removes the space between the labels. float: left on label also works
    input[type="radio"] {
      display: none;
    }
    label {
      color: @white-color;
      font-size:12px;
      font-weight:bold;
      padding:0 15px;
      line-height:32px;
      height: auto;
      display:inline-block;
      text-align:center;
      background-color: @inactive-pill-color;

      -webkit-border-radius: 16px;
      -moz-border-radius: 16px;
      border-radius: 16px;

      &:not(:first-of-type):not(:last-of-type){
        -webkit-border-radius: 0;
        -moz-border-radius: 0;
        border-radius: 0;
      }

      &:first-of-type{
        -webkit-border-top-right-radius: 0;
        -webkit-border-bottom-right-radius: 0;
        -moz-border-radius-topright: 0;
        -moz-border-radius-bottomright: 0;
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
      }

      &:last-of-type{
        -webkit-border-top-left-radius: 0;
        -webkit-border-bottom-left-radius: 0;
        -moz-border-radius-topleft: 0;
        -moz-border-radius-bottomleft: 0;
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
      }

      &.selected, &:hover {
        background-color: @active-pill-color;
      }
    }

    input[type="radio"]:checked+label{
      background-color: @active-pill-color;
    }
  }

  .twitter .search-radios {
      margin-bottom: 0px
    }


  .search-outside-input-container.search-open {
    width: 100%;
    input {
      display:block;
    }
  }  

  .twitter .search-results-container {
    height: calc(100% ~"-" @searchFormHeight ~"-" 126px);
  }

