    text-transform: uppercase;
  }

  .return-to-curate{
    .action-button;
    width: @button-width;
    position: relative;
    left: 45px;
    bottom: 29px;
    padding-left: 5px;
    text-transform: uppercase;
  }

  .curate-this-stream{
    .action-button;
    position: relative;
    left: 35px;
    bottom: 35px;
    padding-left: 5px;
