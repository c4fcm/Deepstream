  .icon{
    position: absolute;
    top: 15px;
  }
  .stream-description{
    position: absolute;
    left: 30px;
    font-size: 14px;
    line-height: 18px;
    font-weight: normal;
    padding-right: 10px;
    width: @right-section-width - 50px;
  }
}


.live-indicator{
  background-color: @live-color;
  display: inline-block;
  font-size: 28px;
  font-weight: bold;
  height: 42px;
  line-height: 42px;
  width: 88px;
  text-align: center;
}


